---
import Stats from "./Stats.astro";
const { names, totalTrophies } = Astro.props;
let nameTitle = names.length == 1 ? names[0] : names.join(", ","")
nameTitle = nameTitle + `- ${totalTrophies}üèÜ`
---


<!-- Mix HTML with JavaScript expressions, similar to JSX: -->

<div class="bg-base-200">
    <div class="hero-content flex-col lg:flex-row lg:align: start;" style="justify-content: left">
        <div class="avatar">
            <div class="mask mask-hexagon">
                <img
                    src="public/vampires1.webp"
                    class="max-w-sm rounded-lg shadow-2xl"
                />
            </div>
        </div>
        <div class="">
            <h1 class="text-5xl font-bold p-8">{nameTitle}</h1>
            <Stats/>
        </div>
    </div>
</div>
