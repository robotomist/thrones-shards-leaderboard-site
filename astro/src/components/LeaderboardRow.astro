---
import Stats from "./Stats.astro";
const { names, totalTrophies, clanData} = Astro.props;
const isSolo = names.length == 1;
let nameTitle = isSolo ? names[0] : names.join(", ","")
nameTitle = nameTitle + ` - ${totalTrophies}ðŸ†`
const kills = clanData.reduce((acc: any, player: any) => acc + player.kills, 0);
const deaths = clanData.reduce((acc: any, player: any) => acc + player.deaths, 0);
const nameToDisplay = isSolo ? names[0] : clanData[0].clan;
---


<!-- Mix HTML with JavaScript expressions, similar to JSX: -->

<div class="bg-base-200">
    <div class="hero-content flex-col lg:flex-row lg:align: start;" style="justify-content: left">
        <div class="avatar">
            <div class="mask mask-hexagon">
                <img
                    src="public/vampires1.webp"
                    class="max-w-sm rounded-lg shadow-2xl"
                />
            </div>
        </div>
        <div class="grow">
            <h1 class="text-5xl font-bold p-8">{nameTitle}</h1>
            <Stats name={nameToDisplay} kills={kills} deaths={deaths}/>
        </div>
    </div>
</div>
